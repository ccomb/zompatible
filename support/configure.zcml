<configure xmlns:zope="http://namespaces.zope.org/zope" xmlns:browser="http://namespaces.zope.org/browser">

<zope:class class=".support.SupportContainer">
  <require permission="zope.Public" interface=".interfaces.ISupportContainer" />
  <require permission="zope.ManageContent" set_schema=".interfaces.ISupportContainer" />
</zope:class>
<zope:class class=".support.Support">
  <require permission="zope.Public" interface=".interfaces.ISupport" />
  <require permission="zope.ManageContent" set_schema=".interfaces.ISupport" />
</zope:class>


<browser:page
    name="support.Support"
    for="zope.app.container.interfaces.IAdding"
    class=".browser.SupportAdd"
    permission="zope.View"
    menu="my_addings" title="new support"
/>
<browser:page
    name="edit_support.html"
    for=".interfaces.ISupport"
    class=".browser.SupportEdit"
    permission="zope.View"
    menu="my_actions" title="Edit"
/>
<browser:page
    name="index.html"
    for=".interfaces.ISupport"
    class=".browser.SupportView"
    permission="zope.View"
    menu="my_actions" title="View"
/>
<browser:page
    name="index.html"
    for=".interfaces.ISupportContainer"
    class=".browser.SupportContainerView"
    template="support_container.pt"
    permission="zope.View"
    menu="my_actions" title="View"
/>
<!-- pour ajouter un Support depuis un soft ou un hard -->
<browser:menuItem
    title="add supported product"
    action="+/support.Support"
    for=".interfaces.ISupportContainer"
    menu="my_actions"
/>
<browser:menuItem
    title="Hardware Compatibility List"
    action="supports/index.html"
    for="zompatible.software.interfaces.ISoftware"
    menu="my_actions"
/>
<browser:menuItem
    title="Software Compatibility List"
    action="supports/index.html"
    for="zompatible.device.interfaces.IDevice"
    menu="my_actions"
/>


<!-- juste pour la ZMI -->
<browser:addMenuItem
    title="Support"
    class=".support.Support"
    permission="zope.ManageContent"
    view="support.Support"
/>



</configure>